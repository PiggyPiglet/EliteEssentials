$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Height: 70);
  Background: $C.@InputBoxBackground;
  Padding: (Top: 8, Bottom: 8, Left: 10, Right: 10);

  Group #KitInfo {
    LayoutMode: Top;
    FlexWeight: 1;
    Anchor: (Left: 0, Right: 10);

    Group {
      LayoutMode: Top;
      Anchor: (Height: 44, Top: 6);

      Label #KitName {
        Style: (
          FontSize: 18,
          RenderBold: true,
          TextColor: #ffcc4d,
          HorizontalAlignment: Start
        );
      }

      Label #KitDescription {
        Style: (
          FontSize: 10,
          TextColor: #AAAAAA,
          HorizontalAlignment: Start
        );
      }

      Label #KitStatus {
        Style: (
          FontSize: 12,
          TextColor: #96a9be,
          HorizontalAlignment: Start
        );
      }
    }
  }

  Group #KitActions {
    LayoutMode: Right;
    Anchor: (Right: 0, Width: 140);

    $C.@TextButton #KitClaimButton {
      @Anchor = (Width: 120);
      Text: "Claim";
    }
  }
}
