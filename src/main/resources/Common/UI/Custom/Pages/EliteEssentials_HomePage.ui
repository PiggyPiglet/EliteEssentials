$C = "../Common.ui";

$C.@PageOverlay {
  LayoutMode: Middle;
  $C.@Container {
    Anchor: (Width: 580, Height: 400);

    #Title {
      Group {
        Anchor: (Height: 50);

        Label #TitleLabel {
          Style: (
            FontSize: 24,
            LetterSpacing: 2,
            RenderUppercase: true,
            RenderBold: true,
            TextColor: #ccb588,
            HorizontalAlignment: Center,
            VerticalAlignment: Center
          );
          Padding: (Top: 3);
          Text: "Your Homes";
        }
      }
    }

    #Content {
      LayoutMode: Left;

      Group #Main {
        LayoutMode: Top;

        Group #HomeList {
          Anchor: (Width: 560);
          FlexWeight: 1;
          LayoutMode: TopScrolling;
          Padding: (Left: 4);
          ScrollbarStyle: $C.@DefaultScrollbarStyle;

          Group #HomeCards {
            LayoutMode: Top;
          }
        }
      }
    }
  }
}

$C.@BackButton {}
