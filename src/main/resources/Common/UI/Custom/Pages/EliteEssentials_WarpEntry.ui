$C = "../Common.ui";

Group {
  LayoutMode: Left;
  Anchor: (Left: 2, Right: 2, Bottom: 6, Height: 70);
  Background: $C.@InputBoxBackground;
  Padding: (Top: 8, Bottom: 8, Left: 10, Right: 10);

  Group #WarpInfo {
    LayoutMode: Top;
    FlexWeight: 1;
    Anchor: (Left: 0, Right: 10);

    Group {
      LayoutMode: Top;
      Anchor: (Height: 44, Top: 6);

      Label #WarpName {
        Style: (
          FontSize: 18,
          RenderBold: true,
          TextColor: #55FFFF,
          HorizontalAlignment: Start
        );
      }

      Label #WarpDescription {
        Style: (
          FontSize: 11,
          TextColor: #AAAAAA,
          HorizontalAlignment: Start
        );
      }

      Label #WarpStatus {
        Style: (
          FontSize: 10,
          TextColor: #FF5555,
          HorizontalAlignment: Start
        );
      }
    }
  }

  Group #WarpActions {
    LayoutMode: Right;
    Anchor: (Right: 0, Width: 180);

    Group #DeleteButtonSlot {
      Anchor: (Width: 40, Height: 44, Right: 8);
    }

    $C.@TextButton #WarpButton {
      @Anchor = (Width: 120, Height: 44);
      Text: "Warp";
    }
  }
}
