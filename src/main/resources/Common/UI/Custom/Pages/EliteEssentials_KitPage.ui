$C = "../Common.ui";
$E = "EliteEssentials_Shared.ui";

$C.@PageOverlay {
  LayoutMode: Middle;
  $C.@Container {
    Anchor: (Width: 580, Height: 420);

    #Title {
      Group {
        $E.@EEPageTitle {
          @Text = "Kits";
        }
      }
    }

    #Content {
      LayoutMode: Top;

      Group #KitList {
        FlexWeight: 1;
        LayoutMode: TopScrolling;
        Padding: (Left: 4);
        ScrollbarStyle: $C.@DefaultScrollbarStyle;

        Group #KitCards {
          LayoutMode: Top;
        }
      }

      Group #Pagination {
        LayoutMode: Left;
        Anchor: (Top: 10, Left: 0, Right: 0);
      }
    }
  }
}

$C.@BackButton {}
